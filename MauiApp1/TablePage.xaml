<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.TablePage"
             Title="Таблиця">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Заголовок сторінки -->
            <Label x:Name="PageTitle"
                   Text="Таблиця"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <!-- Кнопки для керування таблицею -->
            <HorizontalStackLayout Spacing="10">
                <Button Text="Додати рядок" Clicked="OnAddRowClicked"/>
                <Button Text="Додати стовпчик" Clicked="OnAddColumnClicked"/>
            </HorizontalStackLayout>

            <!-- Grid таблиці -->
            <Grid x:Name="TableGrid" RowSpacing="2" ColumnSpacing="2" BackgroundColor="LightGray">
            </Grid>

            <!-- Кнопка обчислення виразів -->
            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                <Label Text="Показувати значення" VerticalOptions="Center"/>
                <Switch x:Name="ViewSwitch" Toggled="OnViewToggled"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout
                Spacing="10"
                HorizontalOptions="Center">
            <Button 
                Text="Зберегти таблицю" 
                Clicked="OnSaveClicked"
                CornerRadius="12"
                WidthRequest="220"
            />
            <Button Text="Повернутися на головну"
                Clicked="OnBackClicked"
                CornerRadius="12"
                WidthRequest="220"/>
            </HorizontalStackLayout>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
